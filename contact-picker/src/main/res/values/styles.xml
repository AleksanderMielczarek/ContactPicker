<resources>

    <!-- Base application theme. -->
    <style name="ContactPickerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeCloseButtonStyle">@style/ActionModeCloseButton</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/colorPrimaryActionBar</item>
    </style>

    <style name="ActionModeCloseButton" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/colorActionBarElements</item>
    </style>

</resources>
